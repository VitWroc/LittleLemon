import mysql.connector as conn

connection = conn.connect(user = "user", password = "password", db = "littlelemondb")
cursor = connection.cursor()
show_me_tables = """
show tables;
"""
cursor.execute(show_me_tables)
results = cursor.fetchall()
for result in results:
    print(result)
