customer_highcost = """
select
    customers.customer_name, 
    customers.contact_number,
    orders.total_cost
from orders
left join customers
    on orders.customer_id = customers.customer_id
where orders.total_cost > 60;
"""

cursor.execute(customer_highcost)
aaa = cursor.fetchall()
for bb in aaa:
    print(bb)
cursor.close()
connection.close()
 
